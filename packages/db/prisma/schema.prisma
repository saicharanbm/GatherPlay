generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @unique @default(cuid())
  fullName  String    
  email     String    @unique
  password  String
  avatarUrl String?
  channel   Channel?
  subscribedTo Subscription[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  watchHistory WatchHistory[]
  
}

model Channel {
  id          String   @id @unique @default(cuid())
  name        String
  description String
  avatarUrl   String?
  slug        String   @unique
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  videos      Video[]
  subscribers Subscription[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Video {
  id          String        @id @unique @default(cuid())
  title       String
  thumbnail_url String
  description String
  category     videoCategory
  duration  Int
  // timestamp Int
  view_count  Int           @default(0)
  status      videoStatus
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  channelId      String
  channel        Channel          @relation(fields: [channelId], references: [id])
  videoFormats VideoFormat[]
  viewers    WatchHistory[]

  @@unique([title,channelId])
}


model VideoFormat {
  id          String      @id @unique @default(cuid())
  format      videoFormat
  url         String      @unique
  videoId     String
  video       Video       @relation(fields: [videoId], references: [id])
  created_at  DateTime    @default(now())
}

model Subscription{
  id String @unique @default(cuid())
  userId String 
  user User @relation(fields: [userId],references: [id])
  channelId String
  channel Channel @relation(fields: [channelId],references: [id])
  @@unique([userId,channelId])
}

model WatchHistory{
  id String @unique @default(cuid())
  userId String
  user   User @relation(fields: [userId],references: [id])
  videoId String
  video Video @relation(fields: [videoId],references: [id])
  lastWatchedAt Int
  watchedAt DateTime @default(now())
  @@unique([userId,videoId])
}



enum videoStatus {
  PROCESSING
  TRANSCODING
  PROCESSED
}

enum videoFormat {
  FORMAT_460P
  FORMAT_720P
  FORMAT_1080P
}

enum videoCategory{
  ENTERTAINMENT
  EDUCATION
  SPORTS 
  NEWS
  TECHNOLOGY
  FASHON
}

